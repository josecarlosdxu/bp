<article class="adressCard adressCard--active" data-js-adressCard="card">
    <div class="adressCard-title">
        <h1 class="adressCard-titleName">Dirección de facturación predeterminada</h1>
        <button class="button button--icon " data-js-card="editButton" title="Editar">
            <svg class="icon icon--inline icon--xs" role="img">
                <use xlink:href="../../img/icons/svg-defs.svg#icon-pencil" />
            </svg>
        </button>
        <button class="button button--icon " data-js-card="editButton" title="Eliminar">
            <svg class="icon icon--inline icon--xs" role="img">
                <use xlink:href="../../img/icons/svg-defs.svg#icon-times" />
            </svg>
        </button>
    </div>
    <div class="adressCard-content">
        {{>adressText}}
    </div>
</article>

        </fieldset>           
        <fieldset class="form-fieldset form-fieldset--borderless">
            <div class="form-fieldset-title">Información adicional</div>
            <div class="form-radiogroup u-md-60">                        
                <input type="checkbox" id="dropshipping" class="form-checkbox">
                <label title="Dropshipping" for="dropshipping" class="form-label form-label--inline">Dropshipping</label>
                <input type="checkbox" id="reembolso" class="form-checkbox">
                <label title="Reembolso" for="reembolso" class="form-label form-label--inline">Reembolso</label>                   
            </div>
        </fieldset> 

 
{{#if confirm}}
 <input class="form-input" placeholder="Confirmar contraseña" type="password"  name="confirm_passwd" maxlength="50" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" data-jspass="confirm" required>

{{else}}
 <input class="form-input" placeholder="Contraseña" type="password"  name="passwd" maxlength="50" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"  data-jspass="pass" required >

 {{/if}}


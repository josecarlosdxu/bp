                 <span class="form-prefix">GB</span> 
                <input type="text" class="form-input  form-input--inline form-input--prefix u-md-60" id="nif1" placeholder="DNI / CIF / VAT Number">
            </fieldset>            
            <fieldset class="form-fieldset form-fieldset--borderless u-mgt">
                <h3 class="form-fieldset-title">Dirección de facturación</h3>                    
                <label class="form-label form-label--inline u-md-35"  title="Nombre" for="name2">Nombre</label>
                <input type="text" class="form-input form-input--inline u-md-60" id="name2">

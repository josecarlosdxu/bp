<form class="form">
    <div class="modularGrid">
        <div class="modularGrid-module u-md-80 ">
            <fieldset class="form-fieldset form-fieldset--sequential">
                <h3 class="form-fieldset-title">Editar datos de usuario</h3>
                <div class="modularGrid">
                    <div class="modularGrid-module u-md-70">
                        <div class="modularGrid">
                            <div class="modularGrid-module u-md-50">
                                <label for="email" class="form-label">Email</label>
                                <input type="text" id="email" class="form-input">
                            </div>
                             <div class="modularGrid-module u-md-50 u-pdl">
                                <label for="passold" class="form-label">Contraseña antigua</label>
                                <input type="password" id="passold" class="form-input">
                            </div>
                            <div class="modularGrid-module u-md-50">
                                <label for="passnew" class="form-label">Nueva contraseña</label>
                                <input type="password" id="passnew" class="form-input">
                            </div>
                            <div class="modularGrid-module u-md-50 u-pdl">
                                <label for="passnew2" class="form-label">Repetir nueva contraseña</label>
                                <input type="password" id="passnew2" class="form-input">
                            </div>
                             <div class="modularGrid-module u-md-25 u-pdt">
                                <button class="button button--primary button--full" id="btnToggleForm2">Aceptar</button>
                            </div>
                        </div>
                     </div>
                     <div class="modularGrid-module u-md-20 u-pdl">
                        <figure class="imgUser">
                            <div class="imgUser-thumbnail">
                                <img alt="" src="http://api.randomuser.me/portraits/women/60.jpg" class="imgUser-img">
                            </div>
                        </figure>
                        <button data-js-back="row" class="form-action u-flr"><i class="icon form-action-icon fa-pencil"></i>Cambiar foto</button>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</form>

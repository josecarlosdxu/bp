                <span class="productSheet-dimensionDt">Pallet (uds.)</span>
                <span class="productSheet-dimensionDd">0</span>
            </div>

            <div class="productSheet-dimensionItem">
                <i class="icon productSheet-dimensionItem-icon icon-ft40"></i>
                <span class="productSheet-dimensionDt">40 ft (uds.)</span>
                <span class="productSheet-dimensionDd">0</span>
            </div>
        </div>

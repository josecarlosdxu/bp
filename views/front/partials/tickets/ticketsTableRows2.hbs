                      {{>conversationTicket}}

                      <div class="modularGrid u-pdt--half">

                      {{>ticketsFileUpload}}

                      </div>

                  </div>

          </div>

          <div class="modularGrid-module u-md-30">
            
             {{>ticketsFileAttach}}

          </div>

          <div class="modularGrid-module">
              <div class="contentTickets-footer u-pdt--half  u-mgt--half">

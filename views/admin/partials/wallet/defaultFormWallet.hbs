                <textarea type="text" id="adress2" class="form-textarea form-textarea--inline u-md-60" >c/ Solar Navarro, 13 Alaquàs, Valencia, 49501 
                </textarea>
                <label class="form-label form-label--inline  u-md-35" for="country2" title="País">País</label> 
                <input type="text" class="form-input  form-input--inline u-md-60" id="country2">
                <label class="form-label form-label--inline  u-md-35" for="phone2" title="Teléfono">Teléfono</label>
                <input type="text" class="form-input  form-input--inline u-md-60" id="phone2">
                <label class="form-label form-label--inline  u-md-35" for="nif2" title="Nº identificación fiscal">Nº identificación fiscal</label>
                <span class="form-prefix">GB</span> 
                <input type="text" class="form-input  form-input--inline form-input--prefix u-md-60" id="nif2" placeholder="DNI / CIF / VAT Number">
            </fieldset>           
        </div>
        <div class="modularGrid-module u-md-30 u-pdl">

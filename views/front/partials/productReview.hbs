                                            <input name="quality_field" value="2" id="quality_rating2" data-js-rating="star" type="radio">
                                            <label for="quality_rating2" ></label>
                                            <input name="quality_field" value="3" id="quality_rating3" data-js-rating="star" type="radio">
                                            <label for="quality_rating3" ></label>
                                            <input name="quality_field" value="4" id="quality_rating4" data-js-rating="star" type="radio">

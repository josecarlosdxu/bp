<aside class="popup popup--waiting u-lg-40 animated fadeInDown" data-js-popup="popup">
    <header class="popup-header">
        <h4 class="popup-title">Identifíquese</h4>
        <button class="button button--borderless  popup-close" data-js-popup="close" title="Cerrar">✖</button>
    </header>
    <div class="popup-content u-pdb--none">
        <div class="modularGrid">
            <div class="modularGrid-module u-md-50 u-pdr u-pdb u-brdr">
                <form data-js-popup-login="form" action="" class="form">
                    <fieldset data-js-popup-content="" class="form-fieldset  form-fieldset--borderless">
                        <h3 class="form-title">Ya soy usuario</h3>
                        <label for="email" class="form-label u-mgt--half">E-mail</label>
                        <input type="text" maxlength="64" name="email" id="email" class="form-input" data-js-popup-login="email"/>
                        <label for="" class="form-label">Contraseña</label>
                        <input type="password" maxlength="64" data-js-validate="{&quot;empty&quot;:&quot;required&quot;}" name="password" id="password" class="form-input " data-js-popup-login="password"/>
                        <a data-js-forget_passwd="" class="form-action form-action--hint " href="#"><span class="form-action-msg">¿Olvidó su contraseña?</span></a>
                        <button data-js-validate-form="" data-js-popup-button-login="" data-js-popup="submitAction" type="submit" class="button button--primary button--full u-mgt--half">Inicie sesión</button>
                    </fieldset>
                </form>
            </div>
            <div class="modularGrid-module u-xs-45 u-pdl">
                <h3 class="form-title u-mgb">Usuario nuevo</h3>
                <a class="button" href="#">Crear una cuenta nueva</a>
            </div>
        </div>
    </div>
</aside>
